<style>
	h1{
		text-align:center;
	}
</style>

<body>
	<h1>Edit Post</h1>
	<%= form_for :post, url: post_path(@post), method: :patch, :html => {:class => "card card-primary"} do |f|%>
		<% if @post.errors.any? %>
			<% @post.errors.full_messages.each do |msg| %>
				<div class="alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>

		<p class="card">
			<%= f.label :title %><br>
			<%= f.text_field(:title,{:class => 'form-control'}) %>
		</p>

		<p class="card">
			<%= f.label :body %><br>
			<%= f.text_area(:body,{:class => 'form-control'}) %>
		</p>

		<p>
			
			<%= f.submit({:class => "btn btn-primary float-right"}) %>
		</p>
	<% end %>
</body>