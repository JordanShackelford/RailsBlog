<style>
	h1{
		text-align:center;
	}
	.card{
		padding:10px;
	}
	.blue{
		color:white;
		background-color:rgb(0,123,255);
	}
</style>

<body>
	<h1>Add post</h1>
	<%= form_for :post, url: posts_path, :html => {:class => "card-outline-primary"} do |f|%>
		<% if @post.errors.any? %>
			<% @post.errors.full_messages.each do |msg| %>
				<div class="alert alert-danger"><%= msg %></div>
			<% end %>
		<% end %>

		<p class="card blue">
			<%= f.label :title %><br>
			<%= f.text_field(:title,{:class => 'form-control'}) %>
		</p>

		<p class="card blue">
			<%= f.label :body %><br>
			<%= f.text_area(:body,{:class => 'form-control'}) %>
		</p>

		<p>
			
			<%= f.submit({:class => "btn btn-primary float-right"}) %>
		</p>
	<% end %>
</body>