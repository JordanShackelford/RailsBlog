<style>
	#heading{
		text-align:center;
	}
	.card{
		padding:20px;
		margin-bottom:10px;
	}
</style>

<body>
	<h1 id="heading">Blog Posts</h1>
		
		<% @posts.each do |post| %>
			<div class="card card-primary">
				<div>
					<h3 class="card-title text-center"><%= post.title %>
					</h3>
					<p class="card-text"><%= post.body %>
					</p>
					<%= link_to "Read More", post_path(post), class: "btn btn-primary float-right" %>
				</div>
			</div>
		<% end %>
</body>